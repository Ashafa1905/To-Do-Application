<h1>My Tasks</h1>
<form action="/tasks/create" method="POST">
  <input type="text" name="title" placeholder="Add Task" required>
  <button type="submit">Add</button>
</form>

<h2>Pending</h2>
<ul>
  <% tasks.filter(t => t.status==='pending').forEach(task => { %>
    <li>
      <%= task.title %>
      <form action="/tasks/update/<%= task._id %>" method="POST">
        <button name="status" value="completed">Complete</button>
        <button name="status" value="deleted">Delete</button>
      </form>
    </li>
  <% }) %>
</ul>
